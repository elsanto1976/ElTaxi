@model IEnumerable<Taxi.Web.Data.Entities.TaxiEntity>

@{
    ViewData["Title"] = "Index";
}

<h2>Taxis</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="far fa-plus"></i> Create New</a>
</p>
<table class="table table-hover table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Plaque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Plaque)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit"></i> Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="far fa-info-circle"></i> Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete"><i class="far fa-trash-alt"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
